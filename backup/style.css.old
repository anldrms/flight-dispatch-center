* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-color: #2563eb;
    --secondary-color: #1e40af;
    --success-color: #10b981;
    --danger-color: #ef4444;
    --warning-color: #f59e0b;
    --info-color: #06b6d4;
    --dark-bg: #1e293b;
    --light-bg: #f8fafc;
    --card-bg: #ffffff;
    --border-color: #e2e8f0;
    --text-primary: #0f172a;
    --text-secondary: #64748b;
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    color: var(--text-primary);
}

.container {
    max-width: 1920px;
    margin: 0 auto;
    padding: 20px;
}

/* Header */
.header {
    background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
    color: white;
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 30px;
    box-shadow: var(--shadow-lg);
}

.header-content h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.header-content h1 i {
    color: #fbbf24;
}

.subtitle {
    font-size: 1.1em;
    opacity: 0.9;
    margin-top: 10px;
}

.simulator-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 20px;
}

.badge {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.85em;
    font-weight: 600;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Main Content Layout */
.main-content {
    display: grid;
    grid-template-columns: 350px 1fr 350px;
    gap: 20px;
    margin-bottom: 20px;
}

@media (max-width: 1400px) {
    .main-content {
        grid-template-columns: 1fr 1fr;
    }
    .right-panel {
        grid-column: 1 / -1;
    }
}

@media (max-width: 768px) {
    .main-content {
        grid-template-columns: 1fr;
    }
}

/* Cards */
.card {
    background: var(--card-bg);
    border-radius: 15px;
    padding: 25px;
    box-shadow: var(--shadow);
    margin-bottom: 20px;
}

.card h2 {
    color: var(--primary-color);
    margin-bottom: 20px;
    font-size: 1.5em;
    display: flex;
    align-items: center;
    gap: 10px;
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 10px;
}

/* Form Elements */
.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 8px;
}

.form-control {
    width: 100%;
    padding: 12px;
    border: 2px solid var(--border-color);
    border-radius: 8px;
    font-size: 1em;
    transition: all 0.3s;
}

.form-control:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
}

/* Buttons */
.button-group {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    margin-top: 20px;
}

.btn {
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    flex: 1;
    justify-content: center;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.btn-primary {
    background: var(--primary-color);
    color: white;
}

.btn-primary:hover {
    background: var(--secondary-color);
}

.btn-secondary {
    background: var(--text-secondary);
    color: white;
}

.btn-secondary:hover {
    background: #475569;
}

.btn-success {
    background: var(--success-color);
    color: white;
}

.btn-success:hover {
    background: #059669;
}

.btn-info {
    background: var(--info-color);
    color: white;
}

.btn-info:hover {
    background: #0891b2;
}

/* Map */
#map {
    height: 500px;
    border-radius: 10px;
    overflow: hidden;
    border: 2px solid var(--border-color);
}

/* Airport Info */
.airport-info {
    margin-top: 10px;
    padding: 12px;
    background: var(--light-bg);
    border-radius: 8px;
    font-size: 0.9em;
    display: none;
}

.airport-info.show {
    display: block;
}

.aircraft-info {
    margin-top: 10px;
    padding: 12px;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-radius: 8px;
    font-size: 0.9em;
    display: none;
}

.aircraft-info.show {
    display: block;
}

/* Route Details */
.route-summary {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
    margin-bottom: 20px;
}

.route-item {
    background: var(--light-bg);
    padding: 15px;
    border-radius: 8px;
    text-align: center;
    border-left: 4px solid var(--primary-color);
}

.route-item .label {
    font-size: 0.85em;
    color: var(--text-secondary);
    margin-bottom: 5px;
}

.route-item .value {
    font-size: 1.5em;
    font-weight: 700;
    color: var(--primary-color);
}

.waypoints-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

.waypoints-table th,
.waypoints-table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid var(--border-color);
}

.waypoints-table th {
    background: var(--light-bg);
    font-weight: 600;
    color: var(--text-primary);
}

.waypoints-table tr:hover {
    background: var(--light-bg);
}

/* Weather */
.weather-section {
    margin-bottom: 20px;
}

.weather-section h3 {
    color: var(--primary-color);
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.metar-display {
    background: var(--dark-bg);
    color: #fff;
    padding: 15px;
    border-radius: 8px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
    margin-bottom: 10px;
    overflow-x: auto;
}

.weather-decoded {
    background: var(--light-bg);
    padding: 15px;
    border-radius: 8px;
    font-size: 0.9em;
}

.weather-decoded p {
    margin-bottom: 5px;
}

/* Flight Brief */
.brief-section {
    margin-bottom: 20px;
    padding: 15px;
    background: var(--light-bg);
    border-radius: 8px;
    border-left: 4px solid var(--primary-color);
}

.brief-section h3 {
    color: var(--primary-color);
    margin-bottom: 10px;
}

.brief-section p {
    margin-bottom: 8px;
    line-height: 1.6;
}

/* Charts */
.chart-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 15px;
}

.chart-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px;
    background: var(--light-bg);
    border-radius: 8px;
    text-decoration: none;
    color: var(--primary-color);
    font-weight: 600;
    transition: all 0.3s;
    border: 2px solid var(--border-color);
}

.chart-link:hover {
    background: var(--primary-color);
    color: white;
    transform: translateX(5px);
}

/* Quick Reference */
.quick-ref h3 {
    color: var(--text-primary);
    font-size: 1.1em;
    margin: 15px 0 10px 0;
}

.quick-ref ul {
    list-style: none;
    padding: 0;
}

.quick-ref li {
    padding: 8px 0;
    border-bottom: 1px solid var(--border-color);
}

.quick-ref li:last-child {
    border-bottom: none;
}

.quick-ref strong {
    color: var(--primary-color);
}

/* Info Text */
.info-text {
    color: var(--text-secondary);
    font-size: 0.9em;
    padding: 12px;
    background: var(--light-bg);
    border-radius: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Loading Overlay */
.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.loading-spinner {
    background: white;
    padding: 40px;
    border-radius: 15px;
    text-align: center;
}

.loading-spinner i {
    font-size: 3em;
    color: var(--primary-color);
    margin-bottom: 20px;
}

.loading-spinner p {
    font-size: 1.2em;
    color: var(--text-primary);
}

/* Footer */
.footer {
    background: rgba(255, 255, 255, 0.95);
    padding: 20px;
    border-radius: 15px;
    text-align: center;
    box-shadow: var(--shadow);
}

.footer p {
    margin-bottom: 10px;
    color: var(--text-secondary);
}

.footer-links a {
    color: var(--primary-color);
    text-decoration: none;
    margin: 0 10px;
    font-weight: 600;
}

.footer-links a:hover {
    text-decoration: underline;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.card {
    animation: fadeIn 0.5s ease-out;
}

/* Alert Messages */
.alert {
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.alert-success {
    background: #d1fae5;
    color: #065f46;
    border-left: 4px solid var(--success-color);
}

.alert-error {
    background: #fee2e2;
    color: #991b1b;
    border-left: 4px solid var(--danger-color);
}

.alert-warning {
    background: #fef3c7;
    color: #92400e;
    border-left: 4px solid var(--warning-color);
}

.alert-info {
    background: #dbeafe;
    color: #1e40af;
    border-left: 4px solid var(--info-color);
}
